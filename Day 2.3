int solve(int i,int last,vector<vector<int>> &points,vector<vector<int>> &dp){
    if(i == 0){
        int maxi = 0;
        for(int j=0;j<=2;j++){
            if(j!=last)
                maxi = max(maxi,points[0][j]);
        }
        return maxi;
    }
    if(dp[i][last]!=-1)
        return dp[i][last];
    int maxi = 0;
    for(int j=0;j<=2;j++){
        if(j!=last){
            int score = points[i][j] + solve(i-1,j,points,dp);
            maxi = max(maxi,score);
        }
    }
    return dp[i][last] = maxi;
}

