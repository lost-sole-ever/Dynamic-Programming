class Solution {
public:
    int fib(int n) {
        vector<int> dp(n+1,-1);
        if(n<=1)
            return n;
        int dp[0] = 0;
        int dp[1] = 1;
        for(int i=2;i<=n;i++){
            int dp[i] = dp[i-1] + dp[i-2];
        }
        return dp[n];
    }
};

